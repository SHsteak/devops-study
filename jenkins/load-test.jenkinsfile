pipeline {
  agent {
    kubernetes {
      yamlFile 'jenkins/pod_template/locust.yaml'
    }
  }

  options {
    timeout(time: 5, unit: 'MINUTES')
  }

  parameters {
    string(name: 'SERVICE', defaultValue: '', description: 'Service to check (ex. sample.default.svc.cluster.local)')
    string(name: 'EXTERNAL_URL', defaultValue: 'google.com', description: 'External URL to check (ex. google.com)')
  }

  stages {
    stage('Load Test') {
      parallel {
        stage('Init master') {
          steps {
            container('master') {
              sh 'locust -f script/locust.py --expect-workers 3 --master --headless -u 100 -r 10 --run-time 15s -H https://www.naver.com'
            }
          }
        }
        stage('a') {
          steps {
            container("${STAGE_NAME}") {
              sleep(time: 3, unit: "SECONDS") 
              sh 'locust -f script/locust.py --worker --master-host localhost'
            }
          }
        }
        stage('b') {
          steps {
            container("${STAGE_NAME}") {
              sleep(time: 3, unit: "SECONDS")
              sh 'locust -f script/locust.py --worker --master-host localhost'
            }
          }
        }
        stage('c') {
          steps {
            container("${STAGE_NAME}") {
              sleep(time: 3, unit: "SECONDS")
              sh 'locust -f script/locust.py --worker --master-host localhost'
            }
          }
        }
      }
    }
  }
  post{
    always {
      slackSend(color: "${currentBuild.currentResult  == 'SUCCESS' ? 'good' : 'danger'}", message: """
Job    : ${env.JOB_NAME} #${env.BUILD_NUMBER}
Status : ${currentBuild.currentResult}
URL    : ${env.BUILD_URL}
Params : ${params} 
      """)
    }
  }
}