FROM busybox:latest as builder
RUN export KUBECTL_VER=v1.21.1 && \
    wget "https://storage.googleapis.com/kubernetes-release/release/$KUBECTL_VER/bin/linux/amd64/kubectl" -O /tmp/kubectl

FROM alpine:latest
RUN apk update --no-cache && \
    apk add --no-cache \
    bash
COPY --from=builder /tmp/kubectl /usr/local/bin/kubectl
RUN chmod +x /usr/local/bin/kubectl
CMD ["/bin/sh"]