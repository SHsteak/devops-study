pipeline {
    agent {
        kubernetes {
            yamlFile 'jenkins/pod_template/test.yaml'
        }
    }
    stages {
        stage('Test') {
            parallel {
                stage('itsm') {
                    stages {
                       dir('itsm') {
                            stage("Code"){
                                steps{
                                    container('amazoncorretto-16') {
                                        git 'https://github.com/SHsteak/itsmv.git'
                                    }
                                }
                            }
                        }
                    }
                }
                stage('ubuntu') {
                    steps {
                        container('ubuntu') {
                            sh '''
                                pwd
                                ls -al $HOME
                            '''
                        }
                    }
                }
            }
        }
    }
}