FROM alpine:latest

RUN apk add --no-cache curl \
    && apk add --no-cache bash \
    && curl -LO https://storage.googleapis.com/kubernetes-release/release/v1.21.1/bin/linux/amd64/kubectl \
    && chmod +x ./kubectl \
    && mv ./kubectl /usr/local/bin/kubectl \
    && apk del curl

CMD ["/bin/sh"]