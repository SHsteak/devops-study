pipeline {
  agent {
    kubernetes {
      yamlFile 'jenkins/pod_template/test.yaml'
    }
  }
  stages {
    stage('Test') {
        parallel {
            stage('itsm') {
                container('amazoncorretto-16') {
                    dir('itsm') {
                        steps('Code'){
                            sh 'pwd'
                        }
                    }
                }
            }
            stage('ubuntu') {
                container('ubuntu') {
                    steps('Init'){
                        sh '''
                            pwd
                            ls -al $HOME
                        '''
                    }
                }
            }
        }
    }
  }
}